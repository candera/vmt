#!/bin/bash -i

background 000033
title VMT

TEMPRC=$(mktemp)

cat > $TEMPRC <<EOF
. ~/.bashrc
boot dev
EOF

# Sets up a tmux window

tmux new-session -s vmt   -n repl -d "bash --rcfile $TEMPRC"
tmux new-window  -t vmt:1 -n tags    'bash -i -c "watch-clojure-tags src dev"'
tmux new-window  -t vmt:2 -n electron 'bash -i -c "electron target/"'

tmux select-window -t vmt:0
tmux -2 attach-session -t vmt
