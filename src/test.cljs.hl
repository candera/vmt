(html
 (ui/head)
 (body
  (grids/table-grid
   :data [{:foo 1
           :bar 2
           :quux "hi"}
          {:foo 3
           :bar 4
           :quux "there"}
          {:foo 10
           :bar 2034234
           :quux "long words"}]
   :row-attrs (constantly {})
   :hidden-columns (cell #{:bar})
   :fixed-columns (cell [:foo])
   :movable-columns (cell [:bar :quux])
   :columns {:foo {:title "foo"
                   :formatter (fn [item]
                                (formula-of [item]
                                  (:foo item)))
                   :sort-key :foo
                   :css (fn [item rownum]
                          (formula-of [item rownum]
                            {:background-color (if (odd? rownum)
                                                 "purple"
                                                 "pink")}))}
             :bar {:title "bar"
                   :formatter (fn [item]
                                (formula-of [item]
                                  (:bar item)))
                   :sort-key :bar}
             :quux {:title "quux"
                    :formatter (fn [item]
                                 (formula-of [item]
                                   (:quux item)))
                    :sort-key :quux}})))

